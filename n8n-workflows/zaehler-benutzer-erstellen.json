        "url": "https://api.github.com/repos/StefanMueller82/Rosenweg/contents/Website/zaehler-config.json",
        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "githubApi",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"message\": \"Neuen Benutzer hinzugefügt: {{ $json.neuerBenutzer.email }}\",\n  \"content\": \"{{ Buffer.from(JSON.stringify($json.config, null, 2)).toString('base64') }}\",\n  \"sha\": \"{{ $json.sha }}\"\n}",
        "options": {}
      },
      "name": "GitHub: Config aktualisieren",
